RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# CSP (XSS, Trusted Types)
Header set Content-Security-Policy "default-src 'self'; script-src 'self'; object-src 'none'; base-uri 'self'; require-trusted-types-for 'script'; frame-ancestors 'none';"

# HSTS
Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"

# COOP
Header set Cross-Origin-Opener-Policy "same-origin"

# XFO
Header set X-Frame-Options "DENY"

# MIME type sniffing արգելում
Header set X-Content-Type-Options "nosniff"

# Referrer policy
Header set Referrer-Policy "strict-origin-when-cross-origin"

# Permissions Policy
Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"

# Gzip սեղմում (եթե հնարավոր է)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript image/svg+xml
</IfModule>
